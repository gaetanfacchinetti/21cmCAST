# Config file for run

[run]
name           : example
output_dir     : <output_directory>
cache_dir      : <cache_directory>

# extra_parameters
[extra_params]
min_redshift   : 5.
max_redshift   : 35.

# UserParams
[user_params]
HII_DIM : 128
BOX_LEN : 250
USE_FFTW_WISDOM          : True
PERTURB_ON_HIGH_RES      : True
USE_INTERPOLATION_TABLES : True


# AstroParams
[astro_params]
F_STAR10            : -1.3
ALPHA_STAR          : 0.5
t_STAR              : 0.5
F_ESC10             : -1.0
ALPHA_ESC           : -0.5
L_X                 : 40.0
M_TURN              : 8.7
NU_X_THRESH         : 500.0 

# FlagOptions
[flag_options]
USE_MINI_HALOS             : False
USE_MASS_DEPENDENT_ZETA    : True
SUBCELL_RSD                : True
INHOMO_RECO                : True
USE_TS_FLUCT               : True

# Parameters to vary in the Fisher analysis
[astro_params_vary]
F_STAR10            : 3.0
ALPHA_STAR          : 3.0
t_STAR              : 3.0
F_ESC10             : 3.0
ALPHA_ESC           : 3.0
L_X                 : 0.1
M_TURN              : 3.0
NU_X_THRESH         : 3.0


[cosmo_params]

[cosmo_params_vary]
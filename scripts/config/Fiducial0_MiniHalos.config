# Config file for Test run

[run]
name           : Fid0_MiniHalos
output_dir     : /home/ulb/physth_fi/gfacchin/exo21cmFAST_release/fisher/runs/
cache_dir      : /scratch/ulb/physth_fi/gfacchin/output_exo21cmFAST/fisher_analysis/

# extra_parameters
[extra_params]
min_redshift   : 5.
max_redshift   : 35.

# UserParams
[user_params]
HII_DIM : 128
BOX_LEN : 250
USE_FFTW_WISDOM          : True
PERTURB_ON_HIGH_RES      : True
USE_INTERPOLATION_TABLES : True


# AstroParams
[astro_params]
F_STAR10          : -1.3
F_STAR7_MINI      : -2.0
ALPHA_STAR        : 0.5
ALPHA_STAR_MINI   : 0.5
t_STAR            : 0.5
F_ESC10           : -1.0
F_ESC7_MINI       : -2.0
ALPHA_ESC         : -0.5
L_X               : 40.0
L_X_MINI          : 40.0


DM_LOG10_MASS                  : 8.1
DM_LOG10_LIFETIME              : 26
DM_FHEAT_APPROX_PARAM_LOG10_F0 : -0.815
DM_FHEAT_APPROX_PARAM_A        : -3.2090e-03
DM_FHEAT_APPROX_PARAM_B        : 1.2950e-01
DM_LOG10_FION_H_OVER_FHEAT     : 0.34242268082
DM_LOG10_FEXC_OVER_FHEAT       : 0.23044892137
DM_LOG10_FION_HE_OVER_FHEAT    : -1.154901959
LOG10_XION_at_Z_HEAT_MAX       : -2.51
LOG10_TK_at_Z_HEAT_MAX         : 2.071882

# FlagOptions
[flag_options]
USE_MINI_HALOS             : True
USE_MASS_DEPENDENT_ZETA    : True
SUBCELL_RSD                : True
INHOMO_RECO                : True
USE_TS_FLUCT               : True
DM_PROCESS                 : decay
DM_PRIMARY                 : elec_delta
DM_FS_METHOD               : no_He
DM_BACKREACTION            : False
DM_FHEAT_APPROX_SHAPE      : schechter
USE_DM_ENERGY_INJECTION    : True
USE_DM_EFFECTIVE_DEP_FUNCS : True
USE_DM_CUSTOM_F_RATIOS     : True
USE_CUSTOM_INIT_COND       : True
FORCE_DEFAULT_INIT_COND    : False


# Parameters to vary in the Fisher analysis
[astro_params_vary]
F_STAR10          : 3.0
F_STAR7_MINI      : 3.0
ALPHA_STAR        : 3.0
ALPHA_STAR_MINI   : 3.0
t_STAR            : 3.0
F_ESC10           : 3.0
F_ESC7_MINI       : 3.0
ALPHA_ESC         : 3.0
L_X               : 0.1
L_X_MINI          : 0.1

# Config file for Test run

[run]
name           : noDM7
output_dir     : /home/ulb/physth_fi/gfacchin/exo21cmFAST_release/fisher/runs/
cache_dir      : /scratch/ulb/physth_fi/gfacchin/output_exo21cmFAST/fisher_analysis/

# extra_parameters
[extra_params]
min_redshift   : 5.
max_redshift   : 35.

# UserParams
[user_params]
HII_DIM : 128
BOX_LEN : 250
USE_FFTW_WISDOM : True
USE_INTERPOLATION_TABLES : True
FAST_FCOLL_TABLES : False
USE_RELATIVE_VELOCITIES : False
POWER_SPECTRUM : 0
HMF : 1

# AstroParams
[astro_params]
ALPHA_ESC         : -0.5
F_ESC10           : -1.0
ALPHA_STAR        : 0.5
F_STAR10          : -1.3
t_STAR            : 0.5
M_TURN            : 8.7
L_X               : 40.5
NU_X_THRESH       : 500.0   

# FlagOptions
[flag_options]
USE_MINI_HALOS             : False
USE_MASS_DEPENDENT_ZETA    : True
SUBCELL_RSD                : True
INHOMO_RECO                : True
USE_TS_FLUCT               : True
USE_HALO_FIELD             : False
M_MIN_in_Mass              : False
PHOTON_CONS                : False
FIX_VCB_AVG                : False
USE_DM_ENERGY_INJECTION    : False


# Parameters to vary in the Fisher analysis
[astro_params_vary]
ALPHA_ESC          : 6.0
F_ESC10            : 2.0
ALPHA_STAR         : 6.0
F_STAR10           : 1.5
t_STAR             : 4.0
M_TURN             : 0.4
L_X                : 0.1
NU_X_THRESH        : 0.6
# Config file for Test run

[run]
name           : constraint_only_minihalos
output_dir     : /home/ulb/physth_fi/gfacchin/exo21cmFAST_release/21cmCAST/scripts/runs
cache_dir      : /scratch/ulb/physth_fi/gfacchin/output_exo21cmFAST/fisher_analysis/

# extra_parameters
[extra_params]
min_redshift   : 5.
max_redshift   : 35.
coarsen_factor : 16

# UserParams
[user_params]
HII_DIM : 128
BOX_LEN : 250
USE_FFTW_WISDOM          : True
PERTURB_ON_HIGH_RES      : True
USE_INTERPOLATION_TABLES : True


# AstroParams
[astro_params]
F_STAR10            : -1.25
ALPHA_STAR          : 0.5
F_ESC10             : -1.35
ALPHA_ESC           : -0.3
F_STAR7_MINI        : -2.5
ALPHA_STAR_MINI     : 0.0
F_ESC7_MINI         : -1.35
A_LW                : 2.0
L_X                 : 40.5
NU_X_THRESH         : 500.0 


# FlagOptions
[flag_options]
USE_MINI_HALOS             : True
USE_MASS_DEPENDENT_ZETA    : True
SUBCELL_RSD                : True
INHOMO_RECO                : True
USE_TS_FLUCT               : True


# Parameters to vary in the Fisher analysis
[astro_params_vary]
F_STAR10            : 3.0
ALPHA_STAR          : 3.0
F_ESC10             : 3.0
ALPHA_ESC           : 3.0
F_STAR7_MINI        : 3.0
ALPHA_STAR_MINI     : 0.02
F_ESC7_MINI         : 3.0
A_LW                : 3.0
L_X                 : 0.1
NU_X_THRESH         : 3.0


[one_side_param_derivative]

[percentage]
ALPHA_STAR_MINI       : False